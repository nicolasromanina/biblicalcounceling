{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "src/index.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/health",
      "dest": "src/index.js"
    },
    {
      "src": "/api/status",
      "dest": "src/index.js"
    },
    {
      "src": "/send-message",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/test-groq",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}